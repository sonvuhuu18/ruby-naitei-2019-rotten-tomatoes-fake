<p id="notice"><%= notice %></p>

<h1><%= t ".title" %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= image_tag tv_show.poster.url if tv_show.poster? %> </td>
        <td><%= link_to t(".show"), [:admin, tv_show] %></td>
        <td><%= link_to t(".edit"), edit_admin_tv_show_path(tv_show) %></td>
        <td><%= link_to t(".destroy"), [:admin, tv_show], method: :delete, data: {confirm: t(".sure")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tv_shows, theme: "twitter-bootstrap-3" %>
<br>

<%= link_to t(".new"), new_admin_tv_show_path %>
