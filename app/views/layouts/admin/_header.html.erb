<div class="header-section">
  <div class="container-fluid">
    <div class="row justify-content-between align-items-center">
      <div class="header-logo col-auto">
        <%= image_tag("home-one/icon/logo.png", class: "logo-light") %>
      </div>
      <div class="header-right flex-grow-1 col-auto">
        <div class="row justify-content-between align-items-center">
          <div class="col-auto">
            <div class="row align-items-center">
              <div class="col-auto"><button class="side-header-toggle"><i class="zmdi zmdi-menu"></i></button></div>
              <div class="col-auto">
                <div class="header-search">
                  <button class="header-search-open d-block d-xl-none"><i class="zmdi zmdi-search"></i></button>
                  <div class="header-search-form">
                    <form action="#">
                      <input type="text" placeholder="Search Here">
                      <button><i class="zmdi zmdi-search"></i></button>
                    </form>
                    <button class="header-search-close d-block d-xl-none"><i class="zmdi zmdi-close"></i></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-auto">
            <ul class="header-notification-area">
              <li class="adomx-dropdown position-relative col-auto">
                <%= link_to '<i class="zmdi zmdi-caret-down drop-arrow"></i>'.html_safe, "#", class: "toggle" %>
                <ul class="adomx-dropdown-menu dropdown-menu-language">
                  <li>
                    <%= link_to t("admin_gui.language1"), "#" %>
                  </li>
                  <li>
                    <%= link_to t("admin_gui.language2"), "#" %>
                  </li>
                </ul>
              </li>
              <li class="adomx-dropdown col-auto">
                <%= link_to '<i class="zmdi zmdi-email-open"></i><span class="badge"></span>'.html_safe, "#", class: "toggle" %>
                <div class="adomx-dropdown-menu dropdown-menu-mail">
                  <div class="head">
                    <h4 class="title">
                      <%= t "admin_gui.teamplate.mail" %>
                    </h4>
                  </div>
                  <div class="body custom-scroll">
                    <ul>
                      <li>
                        <a href="#">
                          <div class="image">
                          </div>
                          <div class="content">
                            <h6>
                              <%= t "admin_gui.teamplate.title" %>
                            </h6>
                            <p>
                              <%= t "teamplate.lorem" %>
                            </p>
                          </div>
                          <span class="reply"><i class="zmdi zmdi-mail-reply"></i></span>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </li>
              <li class="adomx-dropdown col-auto">
                <a class="toggle" href="#"><i class="zmdi zmdi-notifications"></i><span class="badge"></span></a>
                <div class="adomx-dropdown-menu dropdown-menu-notifications">
                  <div class="head">
                    <h5 class="title">
                      <%= t "admin_gui.teamplate.note" %>
                    </h5>
                  </div>
                  <div class="body custom-scroll">
                    <ul>
                      <li>
                        <a href="#">
                          <i class="zmdi zmdi-notifications-none"></i>
                          <p>
                            <%= t "teamplate.lorem" %>
                          </p>
                          <span>
                            <%= t "admin_gui.teamplate.time" %></span>
                        </a>
                        <button class="delete"><i class="zmdi zmdi-close-circle-o"></i></button>
                      </li>
                    </ul>
                  </div>
                  <div class="footer">
                    <%= link_to t("movies.show.more"), "#" %>
                  </div>
                </div>
              </li>
              <li class="adomx-dropdown col-auto">
                <a class="toggle" href="#">
                  <span class="user">
                    <span class="avatar">
                      <%= image_tag("home-video/trailer/1.jpg") %>
                      <span class="status"></span>
                    </span>
                    <span class="name">
                      <%= t "nameteam" %></span>
                  </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
